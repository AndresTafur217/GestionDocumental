@model GestionArhivos.Models.Documento
@{
    ViewData["Title"] = "Crear Documento";
}
<h1>Crear Documento</h1>
<h4>Documento</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Nombre" class="control-label">Nombre del Documento</label>
                <input asp-for="Nombre" class="form-control" required />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="UsuarioId" class="control-label">Usuario</label>
                <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId" required>
                    <option value="">-- Seleccione un Usuario --</option>
                </select>
                <span asp-validation-for="UsuarioId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CategoriaId" class="control-label">Categoría</label>
                <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId" required>
                    <option value="">-- Seleccione una Categoría --</option>
                </select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Ruta" class="control-label">Ubicación del archivo</label>
                <input asp-for="Ruta" class="form-control" required />
                <span asp-validation-for="Ruta" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="archivo" class="control-label">Subir Archivo</label>
                <input type="file" id="archivo" name="archivo" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Volver a la Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}