@model GestionArhivos.Models.Documento

@{
    ViewData["Title"] = "Editar Documento";
}

<h1>Editar</h1>
<h4>Documento</h4>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="FechaCreacion" />
            <input type="hidden" asp-for="Ruta" />

            <div class="form-group mb-3">
                <label asp-for="Nombre" class="control-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" required />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="UsuarioId" class="control-label">Usuario</label>
                <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId" required></select>
                <span asp-validation-for="UsuarioId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CategoriaId" class="control-label">Categoría</label>
                <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId" required></select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Ruta" class="control-label">Ubicacion del archivo</label>
                <input asp-for="Ruta" class="form-control" required />
                <span asp-validation-for="Ruta" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label for="archivo" class="control-label">Archivo (opcional)</label>
                <input type="file" id="archivo" name="archivo" class="form-control" />
                @if (!string.IsNullOrEmpty(Model.Copia))
                {
                    <p class="mt-2">Archivo actual: @Model.Copia</p>
                }
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}